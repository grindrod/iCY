<h2>Change your password</h2>
<div class="Sign_Form">
	<%= form_tag({:action => "change_password"}) do %>
		<p>Choose Password: <br /><%=password_field_tag(:password)%></p>
		<p>Password Confirmation: <br /><%= password_field_tag :password_confirmation %> </p>
		<%= submit_tag("Log in")%>
	<% end %>
</div>
<%= link_to "Back", "/home"%>

